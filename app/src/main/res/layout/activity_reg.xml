<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/peach">

    <EditText
        android:id="@+id/NameEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Имя"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/SurnameEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Фамилия"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/NameEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
    
    <EditText
        android:id="@+id/MailEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Логин / почта"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/SurnameEditText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:id="@+id/InputPasswordEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MailEditText"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/GenderTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Пол"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/InputPasswordEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        />

    <RadioGroup
        android:id="@+id/GenderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/GenderTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <RadioButton
            android:id="@+id/MaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мужской"
            />
        <RadioButton
            android:id="@+id/FemaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Женский"/>



    </RadioGroup>





</androidx.constraintlayout.widget.ConstraintLayout>